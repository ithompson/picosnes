    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Bootapp Debug",
            "cwd": "${workspaceFolder}",
            "chip": "RP2040",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "./bootapp/target/thumbv6m-none-eabi/debug/bootapp"
                }
            ]
        }
    ]
}